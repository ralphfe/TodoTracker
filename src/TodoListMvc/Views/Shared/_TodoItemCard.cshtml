@model TodoListMvc.Models.TodoItem

<div style="padding: 3px 3px 3px 3px; min-width: 300px; max-width:500px">
    <div class="card" style="border-radius: 0.2rem;">
        <div class="card-body">
            <h5 class="card-title">@Model?.Title</h5>
            <p class="card-text">
                @Model?.Description
            </p>
            <partial name="_TodoItemControls" model="Model"/>
        </div>
    </div>
</div>